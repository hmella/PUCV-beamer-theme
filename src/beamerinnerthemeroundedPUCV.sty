\mode<presentation>

\setbeamertemplate{sections/subsections in toc}[square]
\setbeamertemplate{items}[square]

% Title page
\defbeamertemplate*{title page}{pucv}[1][]
{

  \thispagestyle{empty}

  % Logo
  \begin{textblock*}{2cm}(5pt,\paperheight-2.37cm-1.65ex-5pt)
    {
      \transparent{0.85}
      \includegraphics[width=\textwidth]{logo/PUCV_logo.png}
    }
  \end{textblock*}

  % Picture
  \begin{textblock*}{\paperwidth}(0cm, 0cm)
    \includegraphics[width=\paperwidth]{logo/PUCV_banner_2.png}
  \end{textblock*}

  % Bottom line
  \begin{textblock*}{\paperwidth}(0cm, \paperheight-1.65ex)
    \hbox{%
      \begin{beamercolorbox}[wd=1.0\paperwidth,ht=1.0ex,dp=1ex,leftskip=2ex,rightskip=2ex,sep=0pt]{date in head/foot}%
      \end{beamercolorbox}
    }%
  \end{textblock*}

  % Institution/affiliation
  \begin{textblock*}{6cm}(\paperwidth-6.35cm, \paperheight-6.65ex)
      \begin{beamercolorbox}{cib}
        \raggedleft
        \color{PUCV gray!85}
        \usebeamerfont{PUCV inst}
        \insertinstitute
      \end{beamercolorbox}
  \end{textblock*}

  % Title and author
  \begin{textblock*}{0.9\paperwidth}(0.05\paperwidth, 0.425\paperheight)

    \begin{beamercolorbox}[center,wd=0.9\paperwidth,#1]{title page header}
      \color{PUCV lblue}
      \usebeamerfont{PUCV title}
      \inserttitle
      \par%
    \end{beamercolorbox}%

    \vspace{5pt}
    \begin{beamercolorbox}[center,wd=0.9\paperwidth,#1]{author}
        \color{PUCV gray!85}
        \usebeamerfont{PUCV auth}
        \insertauthor%
    \end{beamercolorbox}

    \begin{beamercolorbox}[center, wd=0.9\paperwidth,#1]{date}
      \color{PUCV gray!85}
      \usebeamerfont{PUCV date}
      \insertdate%
    \end{beamercolorbox}
  
  \end{textblock*}
}

\mode<all>
