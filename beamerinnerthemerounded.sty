% Title page
\defbeamertemplate*{title page}{cib1}[1][]
{
  \thispagestyle{empty}
  \begin{textblock*}{14cm}(-1.5cm, -1.5cm)
      \begin{beamercolorbox}{title page header}
          {\transparent{0.225}{\includegraphics[height=1.1\paperheight]{logo/heart_mesh.png}}}
      \end{beamercolorbox}%
  \end{textblock*}

  \begin{textblock*}{8cm}(\paperwidth-9.0cm, 0.65\paperheight)
      \begin{beamercolorbox}{cib}
          \begin{flushright}
              \color{PUCV gray!70}\usebeamerfont{PUCV inst}{\insertinstitute}
          \end{flushright}	
      \end{beamercolorbox}
  \end{textblock*}

  \vskip1cm
  \hfil
  \begin{beamercolorbox}[center,wd=0.8\paperwidth,#1]{title page header}
      \color{PUCV lblue}\usebeamerfont{PUCV title}\inserttitle\par%
  \end{beamercolorbox}%

  \vskip0.2cm%
  \hfil
  \begin{beamercolorbox}[center,wd=0.8\paperwidth,#1]{author}
      \color{PUCV gray!70}\usebeamerfont{PUCV auth}{\insertauthor}%
  \end{beamercolorbox}

  \hfil
  \begin{beamercolorbox}[center, wd=0.8\paperwidth,#1]{date}
    \color{PUCV gray!70}\usebeamerfont{date}{\insertdate}%
  \end{beamercolorbox}

  \vfill
}
  
