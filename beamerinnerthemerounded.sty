% Title page
\defbeamertemplate*{title page}{cib1}[1][]
{
  \thispagestyle{empty}
  % Logo
  \begin{textblock*}{2cm}(5pt,\paperheight-2.37cm-1.65ex-5pt)
    {
      \transparent{0.8}
      \includegraphics[width=\textwidth]{logo/PUCV_logo.png}
    }
  \end{textblock*}

  % Picture
  \begin{textblock*}{\paperwidth}(0cm, 0cm)
    \includegraphics[width=\paperwidth]{logo/PUCV_drawing.png}
  \end{textblock*}

  % Bottom line
  \begin{textblock*}{\paperwidth}(0cm, \paperheight-1.65ex)
    \hbox{%
      \begin{beamercolorbox}[wd=1.0\paperwidth,ht=1.0ex,dp=1ex,leftskip=2ex,rightskip=2ex,sep=0pt]{date in head/foot}%
      \end{beamercolorbox}
    }%
  \end{textblock*}

  \begin{textblock*}{6cm}(\paperwidth-6.35cm, 0.825\paperheight)
      \begin{beamercolorbox}{cib}
          \begin{flushright}
              \color{PUCV gray!70}\usebeamerfont{PUCV inst}{\insertinstitute}
          \end{flushright}
      \end{beamercolorbox}
  \end{textblock*}

  \vskip2cm
  \hfil
  \begin{beamercolorbox}[center,wd=0.8\paperwidth,#1]{title page header}
      \color{PUCV lblue}\usebeamerfont{PUCV title}\inserttitle\par%
  \end{beamercolorbox}%

  \vskip0.2cm%
  \hfil
  \begin{beamercolorbox}[center,wd=0.8\paperwidth,#1]{author}
      \color{PUCV gray}\usebeamerfont{PUCV auth}{\insertauthor}%
  \end{beamercolorbox}

  \hfil
  \begin{beamercolorbox}[center, wd=0.8\paperwidth,#1]{date}
    \color{PUCV gray}\usebeamerfont{PUCV date}{\insertdate}%
  \end{beamercolorbox}

  \vfill
}

\mode<all>
